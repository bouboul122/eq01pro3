<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EMRArrowDrawerController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <Label fx:id="stateLabel" text="State: PowerShapes" />
            <Button fx:id="redArrowButton" mnemonicParsing="false" onAction="#drawRed" text="Red Arrow" />
            <Button fx:id="blackArrowButton" mnemonicParsing="false" onAction="#drawBlack" text="Black Arrow" />
        </items>
      </ToolBar>
   </top>
   <left>
      <Accordion fx:id="shapeMenu" BorderPane.alignment="CENTER">
        <panes>
          <TitledPane fx:id="powerShapes" animated="false" onMouseClicked="#goToPowerState" text="Power Shapes">
               <content>
                  <VBox fx:id="powerVBox" prefHeight="200.0" prefWidth="100.0" />
               </content>
          </TitledPane>
          <TitledPane fx:id="arrowShapes" animated="false" onMouseClicked="#goToArrowState" text="Arrows">
               <content>
                  <VBox fx:id="arrowVBox" prefHeight="200.0" prefWidth="100.0" />
               </content>
          </TitledPane>
        </panes>
      </Accordion>
   </left>
   <center>
      <Pane fx:id="drawingBoard" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
